<Window x:Class="TechKingPOS.App.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reports"
        Height="650"
        Width="1000"
        Background="#F4F6F8"
        WindowStartupLocation="CenterScreen">

    <!-- ================= STYLES ================= -->
    <Window.Resources>

        <!-- TAB STYLE -->
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="26,10"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>

        <!-- DATAGRID CLEAN -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowHeight" Value="42"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- COMBO STYLE -->
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

    </Window.Resources>

    <Grid Margin="15">
        <TabControl Background="White">

            <!-- ================= SALES TAB ================= -->
            <TabItem Header="  Sales Report  ">
                <Grid Margin="18">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="ðŸ“Š SALES REPORT"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,14"/>

                    <!-- FILTER -->
                    <Border Grid.Row="1"
                            Background="White"
                            Padding="12"
                            CornerRadius="8"
                            Margin="0,0,0,14">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="From:" VerticalAlignment="Center"/>
                            <DatePicker x:Name="FromDatePicker" Margin="8,0"/>

                            <TextBlock Text="To:"
                                       VerticalAlignment="Center"
                                       Margin="16,0,0,0"/>
                            <DatePicker x:Name="ToDatePicker" Margin="8,0"/>

                            <Button Content="ðŸ” Load Report"
                                    Margin="16,0"
                                    Padding="16,6"
                                    Click="LoadReport_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- SUMMARY -->
                    <UniformGrid Grid.Row="2" Columns="3" Margin="0,0,0,16">
                        <Border Background="White" Padding="16" Margin="6" CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="TOTAL SALES" FontWeight="Bold"/>
                                <TextBlock x:Name="TotalSalesText"
                                           FontSize="22"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <Border Background="White" Padding="16" Margin="6" CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="PROFIT" FontWeight="Bold"/>
                                <TextBlock x:Name="ProfitText"
                                           FontSize="22"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <Border Background="White" Padding="16" Margin="6" CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="RECEIPTS" FontWeight="Bold"/>
                                <TextBlock x:Name="ReceiptCountText"
                                           FontSize="22"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- SOLD ITEMS (RECEIPT STYLE) -->
                    <Border Grid.Row="3"
                            Background="White"
                            Padding="14"
                            CornerRadius="8"
                            HorizontalAlignment="Left"
                            Width="720">

                        <StackPanel>
                            <TextBlock Text="ðŸ§¾ Sold Items"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"/>

                            <DataGrid x:Name="SoldItemsGrid"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Receipt"
                                                        Binding="{Binding ReceiptNumber}"
                                                        Width="120"/>
                                    <DataGridTextColumn Header="Item"
                                                        Binding="{Binding ItemName}"
                                                        Width="*"/>
                                    <DataGridTextColumn Header="Qty"
                                                        Binding="{Binding Quantity}"
                                                        Width="80"/>
                                    <DataGridTextColumn Header="Price"
                                                        Binding="{Binding Price}"
                                                        Width="120"/>
                                    <DataGridTextColumn Header="Total"
                                                        Binding="{Binding Total}"
                                                        Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>

                </Grid>
            </TabItem>

            <!-- ================= INVENTORY TAB ================= -->
            <TabItem Header="  Inventory  ">
                <Grid Margin="18">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- FILTER -->
                    <Border Background="White"
                            Padding="14"
                            CornerRadius="8"
                            Margin="0,0,0,14">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="View Inventory:"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>

                            <ComboBox x:Name="InventoryFilterCombo"
                                      Width="260"
                                      SelectionChanged="InventoryFilterChanged">
                                <ComboBoxItem Content="Out of Stock" IsSelected="True"/>
                                <ComboBoxItem Content="Running Low"/>
                                <ComboBoxItem Content="Good Stock"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- INVENTORY LIST -->
                    <Border Grid.Row="1"
                            Background="White"
                            Padding="14"
                            CornerRadius="8">

                        <DataGrid x:Name="InventoryGrid"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Item"
                                                    Binding="{Binding Name}"
                                                    Width="*"/>
                                <DataGridTextColumn Header="Qty"
                                                    Binding="{Binding Quantity}"
                                                    Width="120"/>
                                <DataGridTextColumn Header="Target"
                                                    Binding="{Binding TargetQuantity}"
                                                    Width="120"/>
                                <DataGridTextColumn Header="Deficit"
                                                    Binding="{Binding Deficit}"
                                                    Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>

                    </Border>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
