<Window x:Class="TechKingPOS.App.ManageStockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Stock"
        Height="650"
        Width="1000"
        Background="#F4F6F8"
        WindowStartupLocation="CenterScreen">

    <!-- ================= RESOURCES ================= -->
    <Window.Resources>
<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- WATERMARK TEXTBOX -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock Text="{TemplateBinding Tag}"
                                       Margin="12,0,0,0"
                                       Foreground="#333"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="{Binding Text.IsEmpty,
                                           RelativeSource={RelativeSource TemplatedParent},
                                           Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- TAB ITEM STYLE -->
        <Style TargetType="TabItem">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="22,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

    </Window.Resources>

    <Grid Margin="15">
        <TabControl Background="White">

            <!-- ================= TARGETS TAB ================= -->
            <TabItem Header=" Targets ">
                <Border Padding="15" Background="White">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Search -->
                        <TextBox x:Name="TargetSearchBox"
                                 Style="{StaticResource WatermarkTextBox}"
                                 Tag="Search item name..."
                                 Margin="0,0,0,15"/>

                        <!-- Grid -->
                        <DataGrid x:Name="TargetGrid"
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  FontSize="14"
                                  RowHeight="40"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Item"
                                                    Binding="{Binding Name}"
                                                    Width="*" />

                                <DataGridTextColumn Header="Qty"
                                                    Binding="{Binding Quantity}"
                                                    Width="120" />

                                <DataGridTextColumn Header="Target"
                                                    Binding="{Binding TargetQuantity}"
                                                    Width="120" />

                                <DataGridTemplateColumn Header="Action" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Set Target"
                                                    Height="30"
                                                    Padding="10,4"
                                                    Background="#43A047"
                                                    Foreground="White"
                                                    Click="SetTarget_Click"
                                                    Tag="{Binding}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- ================= EDIT ITEMS TAB ================= -->
            <TabItem Header=" Edit Item ">
                <Border Padding="15" Background="White">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT -->
                        <StackPanel Grid.Column="0">
                            <TextBox x:Name="EditSearchBox"
                                     Style="{StaticResource WatermarkTextBox}"
                                     Tag="Search item..."
                                     Margin="0,0,0,12"/>

                            <ListBox x:Name="EditItemsList"
                                     Height="500"
                                     FontSize="14"
                                     DisplayMemberPath="Name"/>
                        </StackPanel>

                        <!-- RIGHT -->
                        <Border Grid.Column="2"
                                Padding="25"
                                CornerRadius="8"
                                Background="#FAFAFA"
                                BorderBrush="#DDD"
                                BorderThickness="1">

                            <StackPanel>

                                <TextBlock Text="Edit Item"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,20"/>

                                <!-- NAME -->
                                <TextBlock Text="Item Name"/>
                                <TextBox x:Name="NameBox"
                                         Height="36"
                                         Padding="10"
                                         Margin="0,6,0,14"/>

                                <!-- ALIAS -->
                                <TextBlock Text="Alias"/>
                                <TextBox x:Name="AliasBox"
                                         Height="36"
                                         Padding="10"
                                         Margin="0,6,0,14"/>

                                <!-- QUANTITY -->
                                <TextBlock Text="Quantity"/>
                                <TextBox x:Name="QtyBox"
                                         Height="36"
                                         Padding="10"
                                         Margin="0,6,0,14"/>

                                <!-- PRICES -->
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel Width="180">
                                        <TextBlock Text="Marked Price"/>
                                        <TextBox x:Name="MPBox"
                                                 Height="36"
                                                 Padding="10"
                                                 Margin="0,6,12,14"/>
                                    </StackPanel>

                                    <StackPanel Width="180">
                                        <TextBlock Text="Selling Price"/>
                                        <TextBox x:Name="SPBox"
                                                 Height="36"
                                                 Padding="10"
                                                 Margin="0,6,0,14"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- TARGET -->
                                <TextBlock Text="Target Quantity"/>
                                <TextBox x:Name="TargetBox"
                                         Height="36"
                                         Padding="10"
                                         Margin="0,6,0,20"/>

                                <!-- BUTTONS -->
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right">
                                    <Button Content="Delete"
                                            Width="100"
                                            Height="34"
                                            Margin="0,0,12,0"
                                            Background="#E53935"
                                            Foreground="White"
                                            Click="Delete_Click"/>

                                    <Button Content="Save"
                                            Width="100"
                                            Height="34"
                                            Background="#1E88E5"
                                            Foreground="White"
                                            Click="Save_Click"/>
                                </StackPanel>

                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
