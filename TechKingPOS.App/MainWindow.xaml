<Window x:Class="TechKingPOS.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TechKing POS"
        Height="500"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="220">

            <TextBlock Text="TechKing POS"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <Button Content="Sales"
                    Height="44"
                    Margin="0,0,0,10"
                    Click="OpenSales_Click"/>

            <Button Content="Add Items"
                    Height="44"
                    Click="OpenAddItem_Click"
                    Margin="0,0,0,10"/>

                    <Button Content="Manage Stock"
                    Click="ManageStock_Click"
                    Padding="10"
                    Margin="0,0,0,10"/>

                    <Button Content="Reports"
                Click="Reports_Click"
                Padding="10"
                Margin="0,0,0,10"/>

        </StackPanel>
    </Grid>
</Window>
