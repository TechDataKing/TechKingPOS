<Window x:Class="TechKingPOS.App.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="380"
        Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA"
        ResizeMode="NoResize">

    <Grid>
        <Border Width="320"
                Padding="30"
                Background="White"
                CornerRadius="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#E5E7EB"
                BorderThickness="1">

            <StackPanel>

                <TextBlock Text="TechKing POS"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Email or ID Number"
                           Margin="0,0,0,5"/>

                <TextBox x:Name="UsernameBox"
                         Height="34"
                         Margin="0,0,0,15"
                         TextAlignment="Center"
                         VerticalContentAlignment="Center"/>

                <TextBlock Text="Password"
           Margin="0,0,0,5"/>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                </Grid.ColumnDefinitions>

                <!-- Hidden password -->
                <PasswordBox x:Name="PasswordBox"
                            Height="34"
                            Grid.Column="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"/>

                <!-- Visible password -->
                <TextBox x:Name="PasswordTextBox"
                        Height="34"
                        Grid.Column="0"
                        Visibility="Collapsed"
                        TextAlignment="Center"
                        VerticalContentAlignment="Center"/>

                <!-- Toggle visibility button -->
                <Button Grid.Column="1"
                        Content="ðŸ‘"
                        FontSize="14"
                        Cursor="Hand"
                        BorderThickness="1"
                        Background="Transparent"
                        Click="TogglePasswordVisibility"/>
            </Grid>


                <TextBlock Text="Forgot password?"
                           Foreground="#4F46E5"
                           FontSize="12"
                           HorizontalAlignment="Right"
                           Cursor="Hand"
                           Margin="0,0,0,20"
                           MouseLeftButtonUp="ForgotPassword_Click"/>

                <Button Content="Login"
                        Height="40"
                        Background="#4F46E5"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Login_Click"/>

                <TextBlock x:Name="StatusText"
                           Foreground="Red"
                           FontSize="12"
                           Margin="0,10,0,0"
                           TextAlignment="Center"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
