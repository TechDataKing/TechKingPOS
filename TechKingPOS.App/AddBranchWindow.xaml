<Window x:Class="TechKingPOS.App.AddBranchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Branch"
        Width="420"
        Height="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Border Padding="20" Background="White">
        <StackPanel>

            <TextBlock Text="Add Branch"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,16"/>

            <TextBlock Text="Branch Name"/>
            <TextBox x:Name="NameBox"
                     Height="36"
                     Margin="0,4,0,12"/>

            <TextBlock Text="Branch Code (optional)"/>
            <TextBox x:Name="CodeBox"
                     Height="36"
                     Margin="0,4,0,12"/>

            <TextBlock Text="Status"/>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,16">
                <RadioButton x:Name="ActiveRadio"
                             Content="Active"
                             IsChecked="True"
                             Margin="0,0,12,0"/>
                <RadioButton Content="Off"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Width="100"
                        Margin="0,0,8,0"
                        Click="Cancel_Click"/>
                <Button Content="Save Branch"
                        Width="120"
                        Click="Save_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
