<Window x:Class="TechKingPOS.App.CreditManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Credit Management"
        Height="420"
        Width="720"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">

    <!-- ================= STYLES ================= -->
    <Window.Resources>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#E8EBF0"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#DDE1E7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SoftTextBox" TargetType="TextBox">
    <Setter Property="Background" Value="#F3F4F6"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="10,6"/>
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="TextBox">
                <Border Background="{TemplateBinding Background}"
                        CornerRadius="6">
                    <Grid>
                        <ScrollViewer x:Name="PART_ContentHost"/>
                        <TextBlock x:Name="Watermark"
                                   Text="{TemplateBinding Tag}"
                                   Foreground="#9CA3AF"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="Collapsed"/>
                    </Grid>
                </Border>

                <ControlTemplate.Triggers>
                    <Trigger Property="Text" Value="">
                        <Setter TargetName="Watermark"
                                Property="Visibility"
                                Value="Visible"/>
                    </Trigger>

                    <Trigger Property="IsFocused" Value="True">
                        <Setter Property="Background" Value="#EEF2FF"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
    </Setter>
</Style>


    </Window.Resources>

    <!-- ================= LAYOUT ================= -->
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ========== LEFT NAVIGATION ========== -->
        <StackPanel Grid.Column="0">

            <TextBlock Text="Credit Management"
                       FontSize="18"
                       FontWeight="Bold"
                       
                       Margin="0,0,0,15"/>

            <Button Content="Add Credit"
                    Style="{StaticResource NavButtonStyle}"
                    Background="#E0E7FF"
                    Margin="0,0,0,10"
                    Click="AddCredit_Click"/>

            <Button Content="Find Customer"
                    Style="{StaticResource NavButtonStyle}"
                    Margin="0,5,0,10"
                    Background="#E0E7FF"
                    Click="FindCustomer_Click"/>

            <Button Content="Credit Summary"
                    Style="{StaticResource NavButtonStyle}"
                    Margin="0,5,0,10"
                    Background="#E0E7FF"
                    Click="CreditSummary_Click"/>

            <Button Content="Payment History"
                    Style="{StaticResource NavButtonStyle}"
                    Margin="0,5,0,10"
                    Background="#E0E7FF"
                    Click="PaymentHistory_Click"/>

        </StackPanel>

        <!-- ========== RIGHT CONTENT ========== -->
        <Border Grid.Column="2"
                Background="White"
                CornerRadius="8"
                Padding="20"
                BorderBrush="#DDD"
                BorderThickness="1">

            <StackPanel>

                <TextBlock Text="Add Payment"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Customer"
           Margin="0,0,0,5"/>

                <TextBox x:Name="SearchBox"
                Tag="Search customer name or phone..."
                Style="{StaticResource SoftTextBox}"
                Height="36"
                Margin="0,0,0,15"
                TextChanged="SearchBox_TextChanged"/>

                <TextBlock Text="Outstanding Balance"
                        FontSize="12"
                        Foreground="#6B7280"/>

                <TextBlock x:Name="BalanceText"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#DC2626"
                        Margin="0,0,0,15"/>



                <TextBlock Text="Amount Paid"
                           Margin="0,0,0,5"/>

                <TextBox x:Name="AmountBox"
                         Height="32"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Payment Method"
                           Margin="0,0,0,5"/>

                <ComboBox x:Name="MethodBox"
                          Height="32"
                          Margin="0,0,0,20">
                    <ComboBoxItem Content="Cash" Padding="6"/>
                    <ComboBoxItem Content="Mpesa" Padding="6"/>
                    <ComboBoxItem Content="Cash + Mpesa" Padding="6"/>
                </ComboBox>

                <Button Content="Submit Payment"
                        Height="40"
                        Background="#4F46E5"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="SubmitPayment_Click"/>

                <TextBlock x:Name="StatusText"
                           Margin="0,15,0,0"
                           Foreground="Green"
                           FontWeight="SemiBold"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
