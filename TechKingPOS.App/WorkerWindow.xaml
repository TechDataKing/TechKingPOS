<Window x:Class="TechKingPOS.App.WorkerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Workers"
        Height="650"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F8">

    <!-- PLACEHOLDER STYLE (WPF SAFE) -->
<Window.Resources>

<Style x:Key="PlaceholderTextBox" TargetType="TextBox">
    <Setter Property="Foreground" Value="Black"/>
    <Setter Property="Height" Value="36"/>
    <Setter Property="Padding" Value="10"/>
    <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="TextBox">
                <Grid>
                    <ScrollViewer x:Name="PART_ContentHost"/>

                    <TextBlock Text="{TemplateBinding Tag}"
                               Foreground="#999"
                               Margin="6,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <!-- show placeholder when empty -->
                                    <DataTrigger Binding="{Binding Text.Length,
                                        RelativeSource={RelativeSource TemplatedParent}}"
                                                 Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>

                                    <!-- hide when text exists -->
                                    <DataTrigger Binding="{Binding Text.Length,
                                        RelativeSource={RelativeSource TemplatedParent}}"
                                                 Value="1">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </ControlTemplate>
        </Setter.Value>
    </Setter>
</Style>


</Window.Resources>


    <!-- âœ… PAGE SCROLL -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- BRANCH SELECTOR BAR -->
<Border Grid.Row="0"
        Background="White"
        Padding="12"
        CornerRadius="8"
        Margin="100,0,0,16">

    <StackPanel Orientation="Horizontal"
                VerticalAlignment="Center">

        <TextBlock Text="BRANCH:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"
                   FontWeight="Bold"
                   FontSize="14"/>

        <ComboBox x:Name="BranchCombo"
                  Width="220"
                  Height="36"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"
                  SelectionChanged="BranchCombo_SelectionChanged"/>

<Button Margin="16,0,0,0"
        Height="36"
        Padding="14,0"
        Background="#F9A825"
        Foreground="White"
        BorderThickness="0"
        Click="AddBranch_Click">

    <StackPanel Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

        <TextBlock Text="+"
                   FontSize="20"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="0,0,6,0"/>

        <TextBlock Text="Add Branch"
                   FontSize="14"
                   VerticalAlignment="Center"/>
    </StackPanel>
</Button>


        <!-- EDIT BRANCH -->
        <Button Margin="8,0,0,0"
                Height="36"
                Padding="14,0"
                Background="#6A1B9A"
                Foreground="White"
                FontWeight="SemiBold"
                FontSize="14"
                BorderThickness="0"
                Click="EditBranch_Click">
            Edit Branch
        </Button>
    </StackPanel>
</Border>


            <!-- CREATE WORKER -->
<Border Grid.Row="1"
        Background="White"
        Padding="24"
        CornerRadius="10"
        Margin="0,0,0,24"
        HorizontalAlignment="Center"
        Width="420">

    <!-- Soft shadow -->
    <Border.Effect>
        <DropShadowEffect Color="#000000"
                          BlurRadius="12"
                          ShadowDepth="2"
                          Opacity="0.12"/>
    </Border.Effect>

    <StackPanel>

        <!-- TITLE -->
        <TextBlock Text="Create Worker"
                   FontSize="20"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- NAME -->
        <TextBlock Text="Name" Margin="0,4,0,4"/>
        <TextBox x:Name="NameBox"
                 Height="40"
                 VerticalContentAlignment="Center"
                 Padding="10"
                 Background="#FAFAFA"
                 BorderBrush="#DDD"/>

        <!-- NATIONAL ID -->
        <TextBlock Text="National ID" Margin="0,14,0,4"/>
        <TextBox x:Name="NationalIdBox"
                 Height="40"
                 VerticalContentAlignment="Center"
                 Padding="10"
                 Background="#FAFAFA"
                 BorderBrush="#DDD"/>

        <!-- PHONE -->
        <TextBlock Text="Phone" Margin="0,14,0,4"/>
        <TextBox x:Name="PhoneBox"
                 Height="40"
                 VerticalContentAlignment="Center"
                 Padding="10"
                 Background="#FAFAFA"
                 BorderBrush="#DDD"/>

        <!-- EMAIL -->
        <TextBlock Text="Email" Margin="0,14,0,4"/>
        <TextBox x:Name="EmailBox"
                 Height="40"
                 VerticalContentAlignment="Center"
                 Padding="10"
                 Background="#FAFAFA"
                 BorderBrush="#DDD"/>
                 <!-- ROLE -->
<TextBlock Text="Role" Margin="0,14,0,4"/>

<ComboBox x:Name="RoleBox"
          Height="40"
          SelectedIndex="1">
    <ComboBoxItem Content="Admin" Tag="Admin"/>
    <ComboBoxItem Content="Worker" Tag="Worker"/>
</ComboBox>


<StackPanel Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,24,0,0">

    <Button Content="Save Worker"
            Width="160"
            Height="42"
            Margin="6"
            Background="#1976D2"
            Foreground="White"
            FontWeight="SemiBold"
            Click="SaveWorker_Click"/>

    <Button Content="Edit Worker"
            Width="160"
            Height="42"
            Margin="6"
            Background="#2E7D32"
            Foreground="White"
            FontWeight="SemiBold"
            Click="EditWorker_Click"/>
</StackPanel>

    </StackPanel>
</Border>


            <!-- WORKERS LIST -->
            <Border Grid.Row="2"
                    Background="White"
                    Padding="14"
                    CornerRadius="8">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="SearchBox"
                             Height="36"
                             Margin="0,0,0,10"
                             Tag="Search worker..."
                             Style="{StaticResource PlaceholderTextBox}"
                             VerticalContentAlignment="Center"
                             TextChanged="SearchChanged"/>

                    <DataGrid x:Name="WorkersGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="ID" Binding="{Binding NationalId}" Width="120"/>
                            <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="140"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0">
                        <Button Content="Activate"
                                Width="120"
                                Margin="6"
                                Click="Activate_Click"/>
                        <Button Content="Deactivate"
                                Width="120"
                                Margin="6"
                                Click="Deactivate_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>
    </ScrollViewer>
</Window>
