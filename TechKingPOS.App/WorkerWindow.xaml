<Window x:Class="TechKingPOS.App.WorkerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Workers"
        Height="650"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F8">

    <!-- PLACEHOLDER STYLE (WPF SAFE) -->
    <Window.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="PlaceholderTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>

                            <TextBlock Text="{TemplateBinding Tag}"
                                       Foreground="#999"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="{Binding Text.IsEmpty,
                                           RelativeSource={RelativeSource TemplatedParent},
                                           Converter={StaticResource BoolToVis}}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- âœ… PAGE SCROLL -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- CREATE WORKER -->
<Border Grid.Row="0"
        Background="White"
        Padding="24"
        CornerRadius="10"
        Margin="0,0,0,24"
        HorizontalAlignment="Center"
        Width="420">

    <!-- Soft shadow -->
    <Border.Effect>
        <DropShadowEffect Color="#000000"
                          BlurRadius="12"
                          ShadowDepth="2"
                          Opacity="0.12"/>
    </Border.Effect>

    <StackPanel>

        <!-- TITLE -->
        <TextBlock Text="Create Worker"
                   FontSize="20"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- NAME -->
        <TextBlock Text="Name" Margin="0,4,0,4"/>
        <TextBox x:Name="NameBox"
                 Height="40"
                 VerticalContentAlignment="Center"
                 Padding="10"
                 Background="#FAFAFA"
                 BorderBrush="#DDD"/>

        <!-- NATIONAL ID -->
        <TextBlock Text="National ID" Margin="0,14,0,4"/>
        <TextBox x:Name="NationalIdBox"
                 Height="40"
                 VerticalContentAlignment="Center"
                 Padding="10"
                 Background="#FAFAFA"
                 BorderBrush="#DDD"/>

        <!-- PHONE -->
        <TextBlock Text="Phone" Margin="0,14,0,4"/>
        <TextBox x:Name="PhoneBox"
                 Height="40"
                 VerticalContentAlignment="Center"
                 Padding="10"
                 Background="#FAFAFA"
                 BorderBrush="#DDD"/>

        <!-- EMAIL -->
        <TextBlock Text="Email" Margin="0,14,0,4"/>
        <TextBox x:Name="EmailBox"
                 Height="40"
                 VerticalContentAlignment="Center"
                 Padding="10"
                 Background="#FAFAFA"
                 BorderBrush="#DDD"/>

        <!-- SAVE BUTTON -->
        <Button Content="Save Worker"
                Height="42"
                Margin="0,24,0,0"
                HorizontalAlignment="Center"
                Width="180"
                Click="SaveWorker_Click"/>
    </StackPanel>
</Border>


            <!-- WORKERS LIST -->
            <Border Grid.Row="1"
                    Background="White"
                    Padding="14"
                    CornerRadius="8">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="SearchBox"
                             Height="36"
                             Margin="0,0,0,10"
                             Tag="Search worker..."
                             Style="{StaticResource PlaceholderTextBox}"
                             VerticalContentAlignment="Center"
                             TextChanged="SearchChanged"/>

                    <DataGrid x:Name="WorkersGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="ID" Binding="{Binding NationalId}" Width="120"/>
                            <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="140"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0">
                        <Button Content="Activate"
                                Width="120"
                                Margin="6"
                                Click="Activate_Click"/>
                        <Button Content="Deactivate"
                                Width="120"
                                Margin="6"
                                Click="Deactivate_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>
    </ScrollViewer>
</Window>
