<Window x:Class="TechKingPOS.App.ReceiptPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Receipt Preview"
        Width="380"
        Height="600"
        WindowStartupLocation="CenterOwner">

    <ScrollViewer Padding="10">
        <TextBox x:Name="ReceiptText"
                 FontFamily="Consolas"
                 FontSize="13"
                 IsReadOnly="True"
                 TextWrapping="NoWrap"
                 BorderThickness="0"/>
    </ScrollViewer>
</Window>
