<Window x:Class="TechKingPOS.App.SelectItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Item"
        Height="460"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Border Padding="20" Background="#FAFAFA">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ITEM NAME -->
            <StackPanel Grid.Row="0" Margin="0,0,0,14">
                <TextBlock Text="Item Name"
                           FontWeight="SemiBold"
                           Foreground="#444"
                           Margin="0,0,0,6"/>
                <TextBox Height="38"
                         IsReadOnly="True"
                         FontSize="14"
                         Text="{Binding Name}"/>
            </StackPanel>

            <!-- MARKED PRICE -->
            <StackPanel Grid.Row="1" Margin="0,0,0,14">
                <TextBlock Text="Marked Price"
                           FontWeight="SemiBold"
                           Foreground="#444"
                           Margin="0,0,0,6"/>
                <TextBox Height="38"
                         IsReadOnly="True"
                         FontSize="14"
                         Text="{Binding MarkedPrice}"/>
            </StackPanel>

            <!-- SELLING PRICE -->
            <StackPanel Grid.Row="2" Margin="0,0,0,14">
                <TextBlock Text="Selling Price"
                           FontWeight="SemiBold"
                           Foreground="#444"
                           Margin="0,0,0,6"/>
                <TextBox Height="38"
                         FontSize="14"
                         Text="{Binding Price , UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- QUANTITY -->
            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <TextBlock Text="Quantity"
                           FontWeight="SemiBold"
                           Foreground="#444"
                           Margin="0,0,0,6"/>
                <TextBox Height="38"
                         FontSize="14"
                         Text="{Binding Quantity}"/>
            </StackPanel>

            <!-- ACTION BUTTONS -->
            <StackPanel Grid.Row="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">
                <Button Content="Clear"
                        Width="90"
                        Height="36"
                        Margin="0,0,10,0"
                        Click="Clear_Click"/>

                <Button Content="Add to Cart"
                        Width="120"
                        Height="36"
                        FontWeight="SemiBold"
                        Click="Add_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
